@charset "UTF-8";

/* 우측 상단 메뉴 구분선(/), */
body {
	font-family:"Arial",malgun gothic,'돋움',Dotum,AppleGothic,sans-serif;
	font-size: 0.75em;
}
	
/* 좌측 상단 로고(Tinynest) 폰트 */
.font1 {
	font-size: 16px;
	font-weight: bold;
	text-align: left;
}
	
/* 좌측 메뉴 폰트 */
.font2 {
	letter-spacing: 0px;
	font-size: 10px;
}
	
/* 좌측 메뉴 */
a:link {text-decoration: none; color: black;}
a:visited {text-decoration: none; color: black;}
a:active {text-decoration: none; color: black;}
a:hover {text-decoration: none; color: gray;}
	
/* 우측 상단 메뉴 */
a.header:link {
	text-decoration: none; color:#999999;
	display: inline-block;
	letter-spacing: 1px;
	font-size: 10px;
}
a.header:visited {
	text-decoration: none; color:#999999;
	display: inline-block;
	letter-spacing: 1px;
	font-size: 10px;
}
a.header:active {
	text-decoration: none; color:#999999;
	display: inline-block;
    letter-spacing: 1px;
    font-size: 10px;
}
a.header:hover {
	text-decoration: none; color:black;
	display: inline-block;
    letter-spacing: 1px;
    font-size: 10px;
}
	
/* 검색창 */
fieldset {
	border: 0px solid #d9d9d9;
    border-bottom: 1px solid #e8e8e8;
    width: 130px;
}
.text {
	width: 90px;
    height: 32px;
    padding: 0;
    border: 0;
    line-height: 32px;
    font-size: 12px;
    color: #2e2e2e;
	background: #fff;
}

#footer {
	width: 950px;
	color: #999;
	font-family: arial;
	font-size: 11px;
	line-height: 15px;
	text-align: left;
	letter-spacing: 0px;
}